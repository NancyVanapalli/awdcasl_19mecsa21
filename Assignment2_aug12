class Recursion
{
 void printArray(int[] a)
 {
  int i=0;
  int n=a.length;
  if(i==n)
    return;
  else
   {   
    System.out.println(a[i]);
    i++;
    printArray(a);
    }
  }
  public static void main(String arg[])
  {
   Recursion r=new Recursion();
   int[] a={10,20,30,40};
   r.printArray(a);
  }
}
